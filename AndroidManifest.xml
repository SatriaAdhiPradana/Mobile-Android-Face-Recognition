<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.javalab.activities" android:versionCode="1"
	android:versionName="1.0-SNAPSHOT">

	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:screenOrientation="portrait">

		<activity android:name=".FaceRecoActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".ContactDetailActivity" />
		<activity android:name=".ContactEditActivity" />
		<activity android:name=".RecognitionResultActivity" />

		<service android:name=".HttpService"></service>
	</application>

	<uses-permission android:name="android.permission.CAMERA" />
	<uses-permission android:name="android.permission.INTERNET" />

	<uses-feature android:name="android.hardware.camera" />
	<uses-feature android:name="android.hardware.camera.autofocus" />

</manifest>

